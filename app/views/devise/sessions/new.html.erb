<div class="m-5 single-page-form-container">
  <div class="card col-12 col-md-6 m-auto">
    <h2 class="p-3"><%= t("sign_in")%></h2>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, t("user.email") %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, t("user.password") %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "main-checkbox" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t("sign_in"), class:"main-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
