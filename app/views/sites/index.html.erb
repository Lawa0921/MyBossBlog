<div class="container">
  <h1><%= t('site.random')%></h1>
  <div class="row">
    <% @sites.each do |site| %>
      <%= link_to site_path(user_name: current_user.name, id: site), class:"main-card-link col-12 col-md-4" do %>
        <div class="card m-3">
          <h5 class="px-3 py-1">
            <%= site.title %>
          </h5>
          <div class="card-body px-3 py-1">
            <%= site.description %>
            <div class="owner-info"> 
              <%= site.owner %>
            </div>
            <%#= site.tags %>
            <%#= site.users %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
