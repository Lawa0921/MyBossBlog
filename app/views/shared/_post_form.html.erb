<%= form_with model: @post, local: true do |f|%>
  <div class="form-group">
    <%= f.label  :title, t('post.title') %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, t('post.content') %>
    <%= f.rich_text_area :content, class:"form-control" %>
  </div>
  <div>
    <%= f.submit class:"btn"%>
  </div>
<% end %>
