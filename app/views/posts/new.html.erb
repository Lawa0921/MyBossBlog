<h1>新增文章</h1>
<%= form_with model: @post, local: true, url: site_posts_path(user_name: current_user.name, site_id: @post.site.title) , method: 'POST' do |f|%>
  <div class="form-group">
    <%= f.label  :title, t('post.title') %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, t('post.content') %>
    <%= f.rich_text_area :content %>
  </div>
  <div>
    <%= f.submit class:"btn"%>
  </div>
<% end %>
