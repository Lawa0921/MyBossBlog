<div class="m-5 single-page-form-container">
  <div class="card col-12 col-md-8 m-auto">
    <h2 class="p-3"><%= t("post.new")%></h2>
    <div class="card-body">
      <%= form_with model: @post, local: true, url: site_posts_path(user_name: current_user.name, site_id: @post.site.title) , method: 'POST' do |f|%>
        <div class="field form-group">
          <%= f.label  :title, t('post.title'), class:"standard-title" %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="field form-group">
          <%= f.rich_text_area :content %>
        </div>
        <div>
          <%= f.submit t("post.submit"), class:"main-btn"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
